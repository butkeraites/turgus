# Staging Frontend Environment Configuration
VITE_NODE_ENV=staging

# API Configuration (will be set during build)
VITE_API_BASE_URL=https://turgus-backend-staging-xxxxxxxxxx-uc.a.run.app

# App Configuration
VITE_APP_NAME=Turgus (Staging)
VITE_APP_VERSION=1.0.0-staging

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_DEBUG=true

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STRATEGY=network-first

# Image Configuration
VITE_MAX_IMAGE_SIZE=300000000
VITE_SUPPORTED_FORMATS=jpeg,jpg,png,webp

# Internationalization
VITE_DEFAULT_LANGUAGE=pt
VITE_SUPPORTED_LANGUAGES=pt,en

# PWA Configuration
VITE_PWA_NAME=Turgus (Staging)
VITE_PWA_SHORT_NAME=Turgus-Dev
VITE_PWA_DESCRIPTION=Mobile marketplace for buying and selling products (Staging)
VITE_PWA_THEME_COLOR=#F59E0B
VITE_PWA_BACKGROUND_COLOR=#FFFFFF