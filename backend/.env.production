# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (will be overridden by Cloud Run)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=turgus
DB_USER=turgus_user
# DB_PASSWORD will be set via Secret Manager

# Redis Configuration (will be overridden by Cloud Run)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
# JWT_SECRET will be set via Secret Manager
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=300000000
UPLOAD_PATH=/tmp/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Google Cloud Storage
# STORAGE_BUCKET will be set via Cloud Run environment variables
GCS_PROJECT_ID=
GCS_KEY_FILE=

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_PATH=/health